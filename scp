    R.close
    time.sleep(2)
    respuesta = input("  ")
    if respuesta == "si":
        time.sleep(2)
        print ("correct!")
        evento_bueno()
    elif respuesta == "no":
        time.sleep(2)
        print ("correct!")
        time.sleep(2)
        print ("""
        bocina: *estatica* bien hecho clase D
        
        *estatica*

        retirate de la camara dontencion de 5287

        *estatica*

        ya has terminado por hoy
        """)
        time.sleep(2)
        print ("""
        bocina:
        preparar al clase D para la camara de contencion de SCP - 173 
        """)

    else:
        time.sleep(2)
        print ("incorrect!")
        evento_malo()
def main(): 
    time.sleep(2)
    xd = input ("activar al SCP - 5287? SI/NO    ")
    time.sleep(2)
    if xd == "si":
        print("-- ACTIVANDO A SCP - 5287 --")
        time.sleep(4)
        print ("""Bocina:
        atencion!
        atencion!

        el SCP - 5287
        a sido activado por un clase D
        """)
        time.sleep(2)
        pregunta_1()
    elif xd == "no":
        print("""bocina:
        hiciste bien al no activarlo
        
        
        atencion a seguridad

        escolten al clase D a su selda para su siguiente tarea de mantenimiento con el SCP - 173
        """)
        time.sleep(2)
main()
