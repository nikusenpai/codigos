from PIL import Image
import time
img = Image.open("./lore/SCP - 5287.jpg")
img.show()

def evento_bueno():
    time.sleep(2)
    R = open("./lore/mensaje_2.txt")
    leer = R.read()
    print(leer)
    R.close

def evento_malo():
    time.sleep(2)
    R = open("./lore/mensaje.txt")
    leer = R.read()
    print(leer)
    R.close

def pregunta_1():
    R = open("./lore/1.txt")
    leer = R.read()
    print(leer)
    R.close()
    respuesta = input("  ")
    if respuesta == "amazonas":
        time.sleep(2)
        print ("correct!")
        evento_bueno()
        time.sleep(5)
        pregunta_2()
    else:
        time.sleep(2)
        print ("incorrect!")
        evento_malo()

